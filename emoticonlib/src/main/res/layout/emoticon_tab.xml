<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bottom_tab_width"
    android:layout_height="@dimen/bottom_tab_height">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/bottom_iv_size"
        android:layout_height="@dimen/bottom_iv_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/tabicon"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/line"/>
</RelativeLayout>